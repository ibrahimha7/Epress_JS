<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.dev.js"></script>
    <script>
        $(document).ready(function () {

            var socket = io(); //1

            socket.on('color', function (data) {
                $('body').css('background-color', data.color);
            });
            $('#green').click(function (e) {
                socket.emit('green');
            });
            $('#blue').click(function (e) {
                socket.emit('blue');
            });
            $('#pink').click(function (e) {
                socket.emit('pink');
            });
        });
    </script>
    <title>Button Game</title>
</head>

<body>

    <button id="green" style="margin-top: 40%; margin-left:100px; height:100px;width:200px ; background-color: green">green</button>
    <button id="blue" style="margin-top: 40%; margin-left:100px; height:100px;width:200px ; background-color: blue">blue</button>
    <button id="pink" style="margin-top: 40%; margin-left:100px; height:100px;width:200px ; background-color: pink">pink</button>
</body>

</html>